{
  "name": "luncher",
  "version": "0.0.1",
  "description": "Accessible lunch menus",
  "main": "server.js",
  "scripts": {
    "coverage:check": "istanbul check-coverage --functions 90",
    "coverage:ci": "cat ./coverage/lcov.info | ./node_modules/.bin/codacy-coverage",
    "coverage:generate": "istanbul cover _mocha -- -R spec --bail --check-leaks test/**/*.spec.js",
    "lint": "xo",
    "service": "node service.js",
    "services": "node services.js",
    "server": "node server.js",
    "test": "npm run lint && npm run coverage:generate && npm run coverage:check",
    "test:ci": "npm run lint && npm run coverage:generate && npm run coverage:ci && npm run coverage:check",
    "test:mocha": "mocha -R spec --bail --check-leaks test/**/*.spec.js"
  },
  "engines": {
    "node": "5.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Gobie/luncher.git"
  },
  "keywords": [
    "lunch"
  ],
  "author": "Michal Bra≈°na <michal.brasna@gmail.com> (https://github.com/Gobie)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Gobie/luncher/issues"
  },
  "homepage": "https://github.com/Gobie/luncher#readme",
  "dependencies": {
    "@slack/client": "^2.3.0",
    "amqp-connection-manager": "^1.3.1",
    "amqplib": "^0.4.1",
    "compression": "^1.6.1",
    "dotenv": "^2.0.0",
    "express": "^4.13.4",
    "helmet": "^1.1.0",
    "lodash": "^4.5.1",
    "memjs": "^0.9.0",
    "moment": "^2.11.2",
    "morgan": "^1.7.0",
    "node-spawn": "0.0.7",
    "request": "^2.69.0",
    "throng": "^2.0.1",
    "tv4": "^1.2.7",
    "uuid": "^2.0.1",
    "ware": "^1.3.0",
    "x-ray": "^2.0.3"
  },
  "devDependencies": {
    "codacy-coverage": "^1.1.3",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "xo": "^0.12.1"
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "envs": [
      "node",
      "mocha"
    ],
    "rules": {
      "new-cap": [
        2,
        {
          "newIsCap": true,
          "capIsNew": true,
          "capIsNewExceptions": [
            "Router"
          ]
        }
      ]
    }
  }
}
